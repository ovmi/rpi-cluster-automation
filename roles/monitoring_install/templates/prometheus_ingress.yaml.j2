apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: prometheus-ingress
  namespace: {{ helm_namespace }}
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
    - host: {{ prometheus_hostname}}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ helm_release }}-kube-prometh-prometheus
                port:
                  number: {{ prometheus_port }}
